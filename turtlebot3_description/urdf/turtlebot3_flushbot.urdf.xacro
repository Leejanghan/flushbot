<?xml version="1.0" ?>
<robot name="turtlebot3_flushbot" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find turtlebot3_description)/urdf/common_properties.xacro"/>
  <xacro:include filename="$(find turtlebot3_description)/urdf/turtlebot3_flushbot.gazebo.xacro"/>

<!-- flushbot center -->
  <link name="base_footprint"/>

<!-- height from the ground --> 
  <joint name="base_joint" type="fixed">  
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 0.0555" rpy="0 0 0"/>
  </joint>

<!-- center of the wheel shaft --> 
  <link name="base_link">
    <visual>
      <geometry>
      	<box size="0.45 0.45 0.39"/>
      </geometry>
      <origin xyz="0 0 0.1645" rpy="0 0 0"/>
      <material name="light_black"/>
    </visual>
    
<!-- setting collision area -->
    <collision>
      <geometry>
        <box size="0.45 0.45 0.39"/>
      </geometry>
      <origin xyz="0.0 0.0 0.1645" rpy="0 0 0"/>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
  </link>
  
<!-- caster wheel --> 
  <joint name="caster_back_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_back_link"/>
    <origin xyz="-0.16 0 -0.0155" rpy="0 0 0"/>
  </joint>


  <link name="caster_back_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57075 0 0"/>
      <geometry>
       <cylinder radius="0.04" length="0.03"/>
       </geometry>
       <material name="white"/>
    </visual>
      
    <collision>
      <origin xyz="0 0 0" rpy="1.57075 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.03"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.005" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

  <joint name="caster_front_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_front_link"/>
    <origin xyz="0.16 0 -0.0155" rpy="0 0 0"/>
  </joint>

  <link name="caster_front_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57075 0 0"/>
      <geometry>
       <cylinder radius="0.04" length="0.03"/>
       </geometry>
       <material name="white"/>
    </visual>
      
    <collision>
      <origin xyz="0 0 0" rpy="1.57075 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.03"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.005" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

<!-- left wheel -->
  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0.0 0.201 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="wheel_left_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57075 0 0"/>
      <geometry>
        <cylinder radius="0.0555" length="0.044"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.0555" length="0.044"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.5" />
      <inertia ixx="0.1" ixy="0" ixz="0"
               iyy="0.1" iyz="0"
               izz="0.1" />
      </inertial>
  </link>

<!-- right wheel -->
  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0.0 -0.201 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="wheel_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57075 0 0"/>
      <geometry>
        <cylinder radius="0.0555" length="0.044"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.0555" length="0.044"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.5" />
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
      </inertial>
  </link>

<!-- imu place --> 
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.0845" rpy="0 0 0"/>
  </joint>

  <link name="imu_link"/>

  <joint name="scan_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="0.175 0 0.70" rpy="0 0 0"/>
  </joint>

<!-- sensor place -->
  <link name="base_scan">
    <visual>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://turtlebot3_description/meshes/sensors/lds.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.044" radius="0.036"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.114" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

</robot>
